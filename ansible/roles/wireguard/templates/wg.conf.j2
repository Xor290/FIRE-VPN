[Interface]
PrivateKey = {{ wg_private_key }}
Address = {{ wg_server_address }}
ListenPort = {{ wg_port }}
SaveConfig = true

PostUp = iptables -A FORWARD -i %i -j ACCEPT; iptables -A FORWARD -o %i -j ACCEPT; iptables -t nat -A POSTROUTING -o {{ wg_nat_interface | default(ansible_default_ipv4.interface) }} -j MASQUERADE
PostDown = iptables -D FORWARD -i %i -j ACCEPT; iptables -D FORWARD -o %i -j ACCEPT; iptables -t nat -D POSTROUTING -o {{ wg_nat_interface | default(ansible_default_ipv4.interface) }} -j MASQUERADE
